<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <menuitem id="th_recycle_bin" name="Recycle Bin"
            parent="base.menu_custom" sequence="9" />

        <record id="th_recycle_bin_tree" model="ir.ui.view">
            <field name="name">th.recycle.bin.tree</field>
            <field name="model">th.recycle.bin</field>
            <field name="arch" type="xml">
                <tree string="RecycleBin">
                    <field name="model_id" />
                    <!-- <field name="name" string="Order Number"/> -->
                </tree>
            </field>
        </record>

        <record id="th_recycle_bin_form" model="ir.ui.view">
            <field name="name">th.recycle.bin.form</field>
            <field name="model">th.recycle.bin</field>
            <field name="arch" type="xml">
                <form string="RecycleBin Configuration">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1>
                                <field name="name" placeholder="Enter name"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="model_id" />
                            </group>
                            <group>
                                <field name="auto_delete" />
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="th_recycle_bin_configuration_act" model="ir.actions.act_window">
            <field name="name">Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">th.recycle.bin</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="th_recycle_bin_config" name="Configuration"
            parent="th_recycle_bin" action="th_recycle_bin_configuration_act"
            sequence="2" />

    </data>
</odoo>